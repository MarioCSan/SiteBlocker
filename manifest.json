{
    "manifest_version": 2,
    "name": "siteBlocker",
    "version": "1.0.0",
    "description": "SiteBlocker Chrome extension",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.facebook.com/*",
          "https://www.netflix.com/*",
          "https://twtter.com/*",
          "https://es.pornhub.com/*",
          "https://www.xvideos.com/*",
          "https://es.redtube.com/*"
        ],
        "css": [
          "css/style.css"
        ]
      }
    ],
    "web_accessible_resources": [
      "css/style.css"
    ]
  }